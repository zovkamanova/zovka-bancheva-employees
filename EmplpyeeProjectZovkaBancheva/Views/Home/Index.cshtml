@{
    ViewData["Title"] = "Home Page";
}

<h1>Upload File</h1>
<div class="row">
    <section>
        <form method="post" enctype="multipart/form-data"
              asp-controller="UploadFile" asp-action="Index">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload you file using this form:</p>
                    <input type="file" name="file" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </section>
</div>